					<ee:message>
						<ee:set-payload><![CDATA[%dw 2.0
output application/json
---
vars.bulkSuccessfullResult]]></ee:set-payload>
					</ee:message>
				</ee:transform>
				<logger level="INFO" doc:name="Logger" doc:id="afab9f2c-856e-47da-ab0c-c775c753be26" message="#[payload]"/>
			</otherwise>
		</choice>
		<error-handler >
			<on-error-propagate enableNotifications="true" logException="true" doc:name="On Error Propagate" doc:id="4821cfe3-cc80-4997-b9ed-165e802897dd" >
				<logger level="ERROR" doc:name="Logger" doc:id="c2eae2ed-023f-4c4b-a5fe-45155459c61a" message="#[error.description]"/>
			</on-error-propagate>
		</error-handler>
