			<ee:message>
				<ee:set-payload><![CDATA[%dw 2.0
output application/json
---
vars.bulkSuccessfullResult map {
	external_id__c: $.originalFields.external_id__c,
	sfId: $.id
}]]></ee:set-payload>
			</ee:message>
		</ee:transform>
				<os:store doc:name="Store Accounts Ids" doc:id="12b850c9-10dc-4b47-9d59-0f851ad8940d" key="#[vars.objectName]" objectStore="Object_store">
		</os:store>
			</when>
			<otherwise >
